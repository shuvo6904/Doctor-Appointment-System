<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#D9F6F6"
    tools:context=".PatientLoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_sign_in"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"/>

        <ProgressBar
            android:id="@+id/loginProgressBar"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/loginId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Here"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp"
            android:gravity="center"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/userEmailId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:hint="Enter Your Email Here"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            />
        <EditText
            android:id="@+id/userPasswordId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter Your Password Here"
            android:inputType="textPassword"
            android:padding="12dp"/>
        <Button
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:id="@+id/userLoginbuttonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/userBackRegId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="New Here? Create Account"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/userForgotPassId"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Forgot Password?"
            android:textColor="@color/black"
            android:textSize="17sp" />


    </LinearLayout>




</ScrollView>