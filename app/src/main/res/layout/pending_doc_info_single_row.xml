<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="#ECECF8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="@dimen/_5sdp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profileImageViewId"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_120sdp"
                    android:src="@drawable/ic_profile"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFF"/>

                <!--<ImageView
                    android:id="@+id/profileImageViewId"
                    android:layout_margin="@dimen/_5sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile"
                    android:layout_weight="0.8"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_100sdp"/>-->

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        android:id="@+id/pendingDoctorNameId"
                        android:text="Doctor Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/pendingHospitalNameId"
                        android:text="Hospital Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/pendingDegreeId"
                        android:text="Degree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/pendingSpecializedAreaId"
                        android:text="Specialized Area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_margin="5dp"
                        android:textSize="@dimen/_12sdp"
                        android:id="@+id/pendingVisitFeeId"
                        android:text="Visit Fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:layout_margin="@dimen/_10sdp"
                android:id="@+id/imageViewId"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_image_24"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"/>



            <EditText
                android:layout_marginTop="10dp"
                android:hint="Enter Hospital ID"
                android:id="@+id/pendingPageHospitalId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <Button
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:id="@+id/approveAsDocId"
                android:text="Approve as Doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>