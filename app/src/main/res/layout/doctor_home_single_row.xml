<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_4sdp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp">

        <RelativeLayout
            android:layout_margin="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/statusId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/_2sdp"
                android:text="Status"
                android:textColor="#FA0606"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <View
                android:id="@+id/viewId"
                android:layout_below="@+id/statusId"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"/>

            <LinearLayout
                android:id="@+id/layoutId"
                android:layout_below="@+id/viewId"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/docHomePatientNameId"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="#000000"
                    android:padding="@dimen/_2sdp"
                    android:text="Patient Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/docHomePatientPhoneId"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000000"
                    android:padding="@dimen/_2sdp"
                    android:text="Patient Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/docHomeTimeId"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000000"
                    android:padding="@dimen/_2sdp"
                    android:text="Visiting Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/docHomeHospitalNameId"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#000000"
                    android:padding="@dimen/_2sdp"
                    android:text="Hospital Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:layout_below="@+id/layoutId"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/acceptBtnId"
                    android:layout_margin="@dimen/_3sdp"
                    android:text="Accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/deleteBtnId"
                    android:layout_margin="@dimen/_3sdp"
                    android:text="Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>