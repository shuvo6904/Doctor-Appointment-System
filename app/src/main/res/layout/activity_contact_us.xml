<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="@dimen/_5sdp"
    android:background="#E0F4F6"
    tools:context=".ContactUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:text="For any help please contact us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:drawableEnd="@drawable/ic_baseline_phone_in_talk_24"
            android:text="01521408126  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:drawableEnd="@drawable/ic_baseline_email_24"
            android:text="safayetshafi22@gmailcom  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




        <EditText
            android:id="@+id/userContactNameId"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/userContactEmailId"
            android:hint="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/userContactPhoneId"
            android:hint="Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/userContactMsgId"
            android:layout_marginTop="@dimen/_35sdp"
            android:hint="Your Message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_margin="@dimen/_5sdp"
            android:layout_gravity="center"
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    </LinearLayout>

</ScrollView>